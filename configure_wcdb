#! /bin/sh

./configure \
--enable-tempstore=yes \
--enable-threadsafe="multi" \
--with-crypto-lib=commoncrypto \
LDFLAGS="-framework Security -framework Foundation" \
CFLAGS="-DSQLITE_ENABLE_FTS3 -DSQLITE_ENABLE_FTS3_PARENTHESIS -DSQLITE_ENABLE_API_ARMOR -DSQLITE_OMIT_BUILTIN_TEST -DSQLITE_OMIT_AUTORESET -DSQLITE_ENABLE_UPDATE_DELETE_LIMIT -DSQLITE_ENABLE_RTREE -DSQLITE_ENABLE_LOCKING_STYLE=1 -DSQLITE_SYSTEM_MALLOC -DSQLITE_OMIT_LOAD_EXTENSION -DSQLITE_CORE -DSQLITE_THREADSAFE=2 -DSQLITE_DEFAULT_CACHE_SIZE=250 -DSQLITE_DEFAULT_CKPTFULLFSYNC=1 -DSQLITE_DEFAULT_PAGE_SIZE=4096 -DSQLITE_OMIT_SHARED_CACHE -DSQLITE_HAS_CODEC -DSQLCIPHER_CRYPTO_CC -DUSE_PREAD=1 -DSQLITE_TEMP_STORE=2 -DSQLCIPHER_PREPROCESSED -DHAVE_USLEEP -DSQLITE_MALLOC_SOFT_LIMIT=0 -DSQLITE_WCDB_SIGNAL_RETRY=1 -DSQLITE_DEFAULT_MEMSTATUS=0 -DSQLITE_ENABLE_COLUMN_METADATA -DSQLITE_DEFAULT_WAL_SYNCHRONOUS=1 -DSQLITE_LIKE_DOESNT_MATCH_BLOBS -DSQLITE_MAX_EXPR_DEPTH=0 -DSQLITE_OMIT_DEPRECATED -DSQLITE_OMIT_PROGRESS_CALLBACK -DSQLITE_OMIT_SHARED_CACHE -DOMIT_CONSTTIME_MEM -DOMIT_MEMLOCK -DSQLITE_ENABLE_FTS3_TOKENIZER -DSQLITE_WCDB_CHECKPOINT_HANDLER -DSQLITE_MMAP_READWRITE -DSQLITE_ENABLE_DBSTAT_VTAB -DSQLITE_ENABLE_FTS5"